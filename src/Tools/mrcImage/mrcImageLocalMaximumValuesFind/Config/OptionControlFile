# OptionControlFile
# FileFormat
"-i","-i[nput]","Input:","Essential","1","1","In","inFile::mrcImage","NULL"
"-o","-o[utput]","OutputDataFile","Optional","1","1","Out","outFile::mrcImage","NULL"
"-O","-O[utput]","OutputDataFile","Optional","1","1","OutP","outFile::ASCII","stdout"
"-T","-T[hreshold]","Threshold","Optional","1","1","Threshold","Real","0"
"-S","-S[ize]","Size","Optional","1","1","Size","Integer","3"
"-c","-c[onfig]","ConfigurationFile","Optional","1","1","configFile","inFile","NULL"
"-m","-m[ode]","Mode","Optional","1","1","mode","Integer","0"
