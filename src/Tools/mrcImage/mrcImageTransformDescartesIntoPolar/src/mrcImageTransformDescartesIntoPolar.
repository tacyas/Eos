static char __sccs_id[] = "%Z%mrcImageTransformDescartesIntoPolar ver%I%; Date:%D% %Z%";
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>                  
#define GLOBAL_DECLARATION
#include "../inc/config.h"

#define DEBUG
#include "genUtil.h"
#include "mrcImage.h"
#include "lmrcImageSymmetryFind.h"


void
  main(int argc, char* argv[]) 
{
  mrcImage in;
  mrcImage out;
  
  mrcImageTransformDescartesIntoPolarInfo info;
  
  
  init0(&info);
  argCheck(&info, argc, argv);
  init1(&info);
  
  
  mrcFileRead(&in,info.In,"in main",0);
  lmrcImageTransformDescartesIntoPolar(&out,&in,info.dr,info.dtheta,0);
  mrcFileWrite(&out,info.Out,"in main",0);
  
  
  DEBUGPRINT("Program Start\n");
  
  exit(EXIT_SUCCESS);
}

void
  additionalUsage()
{
  fprintf(stderr, "----- Additional Usage -----\n");
}
